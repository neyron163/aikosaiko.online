{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "alwaysStrict": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.integ.ts",
    "**/*.integ.tsx"
]
}
